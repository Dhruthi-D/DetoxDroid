<div class="category-section">
    <% for (const category in categorizedPosts) { %>
        <h2 class="text-2xl font-bold mb-4"><%= category.charAt(0).toUpperCase() + category.slice(1) %></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
            <% categorizedPosts[category].forEach(post => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <% if (post.image) { %>
                        <img src="<%= post.image %>" alt="<%= post.title %>" class="w-full h-48 object-cover">
                    <% } %>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold mb-2"><%= post.title %></h3>
                        <% if (post.content && post.content.length > 200) { %>
                            <p class="text-gray-600 mb-3"><%= post.content.substring(0, 200) %>...</p>
                        <% } else { %>
                            <p class="text-gray-600 mb-3"><%= post.content %></p>
                        <% } %>
                        <% if (post.source) { %>
                            <div class="text-sm text-gray-500">
                                <p>Posted in <%= post.source %></p>
                                <p>By <%= post.author %></p>
                                <p>Score: <%= post.score %></p>
                                <p><%= moment(post.created).fromNow() %></p>
                            </div>
                            <a href="<%= post.url %>" target="_blank" 
                               class="mt-3 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                                Read on Reddit
                            </a>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>