<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media App - Login/Signup</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #121212;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-container {
            background-color: #1e1e1e;
            border-radius: 12px;
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            margin: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: #ffffff;
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        input {
            width: 100%;
            padding: 0.75rem 1rem;
            background: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            color: #333;
            transition: box-shadow 0.2s ease;
        }

        input:focus {
            outline: none;
            box-shadow: 0 0 0 2px #666;
        }

        input::placeholder {
            color: #666;
        }

        button {
            width: 100%;
            padding: 0.75rem;
            background: #2c2c2c;
            border: none;
            border-radius: 8px;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            margin: 1rem 0;
            transition: background-color 0.2s ease;
        }

        button:hover {
            background: #3c3c3c;
        }

        .toggle-text {
            color: #999;
            text-align: center;
            margin-top: 1rem;
        }

        .toggle-link {
            color: #fff;
            text-decoration: none;
            margin-left: 0.5rem;
        }

        .toggle-link:hover {
            text-decoration: underline;
        }

        .error-message {
            color: #ff4444;
            margin-bottom: 1rem;
            text-align: center;
        }

        @media (max-width: 480px) {
            .auth-container {
                margin: 1rem;
            }
        }
    </style>
</head>
<body>

    <!-- Authentication Modal -->
    <div class="auth-container" id="login-container">
        <h1 id="form-title">Login</h1>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>

        <!-- Login Form -->
        <form id="login-form" action="/login" method="POST">
            <div class="form-group">
                <input type="email" id="email" name="email" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" placeholder="Enter password" required>
            </div>
            <button type="submit" id="submit-button">Login</button>
        </form>

        <!-- Toggle to Signup -->
        <p class="toggle-text" id="toggle-text">
            Don't have an account?
            <a href="#" id="toggle-link" class="toggle-link">Sign Up</a>
        </p>
    </div>

    <script>
        // DOM Elements
        const formTitle = document.getElementById("form-title");
        const loginForm = document.getElementById("login-form");
        const toggleText = document.getElementById("toggle-text");
        const toggleLink = document.getElementById("toggle-link");
        const submitButton = document.getElementById("submit-button");

        // Toggle between Login and Signup
        toggleLink.addEventListener("click", (e) => {
            e.preventDefault();

            if (formTitle.textContent === "Login") {
                formTitle.textContent = "Sign Up";
                loginForm.action = "/signup";
                submitButton.textContent = "Sign Up";
                toggleText.innerHTML = 'Already have an account? <a href="#" id="toggle-link" class="toggle-link">Login</a>';
            } else {
                formTitle.textContent = "Login";
                loginForm.action = "/login";
                submitButton.textContent = "Login";
                toggleText.innerHTML = 'Don\'t have an account? <a href="#" id="toggle-link" class="toggle-link">Sign Up</a>';
            }
        });
    </script>

</body>
</html>
