<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DetoxDroid</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="main-nav">
        <div class="nav-brand">DetoxDroid</div>
        <ul class="nav-links">
            <% pages.forEach(function(page) { %>
                <li><a href="<%= page.url %>"><%= page.name %></a></li>
            <% }); %>
            <li><a href="/explore">Explore</a></li> <!-- Add Explore Link -->
            <li><a href="/users-of-app">Users of App</a></li> <!-- Add Users of App Link -->
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Welcome to DetoxDroid</h1>
        <p>Choose an option from the navigation menu above to get started.</p>

        <!-- Display User's Screen Time -->
        <div class="screen-time">
            <h2>Your Screen Time</h2>
            <p>You have been active for <strong><%= totalSeconds %></strong> seconds today.</p>
        </div>

        <!-- Optional: Add a button to reset screen time -->
        <button id="resetScreenTime" onclick="resetScreenTime()">Reset Screen Time</button>

        <!-- Optional: Add a script to reset the screen time -->
        <script>
            function resetScreenTime() {
                // Updated endpoint for resetting screen time
                fetch('/api/screen-time/reset', { method: 'POST' })
                    .then(response => {
                        if (response.ok) {
                            alert('Screen time reset successfully!');
                            location.reload(); // Reload the page to update screen time
                        } else {
                            alert('Failed to reset screen time.');
                        }
                    });
            }
        </script>
    </div>

    <script>
        // Update screen time using the new endpoint
        setInterval(() => {
            fetch('/api/screen-time/update', { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        console.log('Screen time updated');
                    } else {
                        console.error('Failed to update screen time:', response.status);
                    }
                })
                .catch(error => console.error('Error updating screen time:', error));
        }, 1000); // Update every second
    </script>

    <script src="/js/main.js"></script>
</body>
</html>
